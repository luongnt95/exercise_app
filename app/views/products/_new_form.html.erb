<%= form_for @product, html: { multipart: true } do |f| %>

    <div class="row-form">
        <div class="span3">Product Name:</div>
        <div class="span9">
            <%= f.text_field :name, placeholder: "some text value..." %>
            <% unless @product.errors[:name].empty? %>
                <li class="validate-error"><%= @product.errors[:name] %></li>
            <% end %>
        </div>
        <div class="clear"></div>
    </div> 
    <div class="row-form">
        <div class="span3">Price:</div>
        <div class="span9">
            <%= f.number_field :price, placeholder: "some text value..." %>
            <% unless @product.errors[:price].empty? %>
                <li class="validate-error"><%= @product.errors[:price] %></li>
            <% end %>
        </div>
        <div class="clear"></div>
    </div> 
    <div class="row-form">
        <div class="span3">Description:</div>
        <div class="span9">
            <%= f.text_area :description, placeholder: "Textarea field placeholder..." %>
            <% unless @product.errors[:description].empty? %>
                <li class="validate-error"><%= @product.errors[:description] %></li>
            <% end %>
        </div>
        <div class="clear"></div>
    </div> 
    <div class="row-form">
        <div class="span3">Upload Image:</div>
        <div class="span9">

            <%= file_field_tag "images[]", typye: :file, multiple: true, size: 19 %>
                                
        </div>
        <div class="clear"></div>
    </div> 
    <div class="row-form">
        <div class="span3">Activate:</div>
        <div class="span9">

            <%= f.select(:activated, [['Activate', 'activated'], 
                                      ['Deactivate', 'deactivated']],
                                       include_blank: 'choose an option...') %>
            <% unless @product.errors[:activated].empty? %>
                <li class="validate-error"><%= @product.errors[:activated] %></li>
            <% end %>

        </div>
        <div class="clear"></div>
    </div>                          
    <div class="row-form">

        <%= f.submit "Create", class: "btn btn-success" %>

		<div class="clear"></div>
    </div>

<% end %>