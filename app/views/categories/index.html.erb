<div class="content">

    <%= render 'layouts/flash' %>

    <div class="breadLine">

        <ul class="breadcrumb">
            <li><a href="<%= categories_path %>">List Categories</a></li>
        </ul>

    </div>

    <div class="workplace">

        <div class="row-fluid">
            <div class="span12 search">
                <form>
                    <input type="text" class="span11" placeholder="Some text for search..." name="search"/>
                    <button class="btn span1" type="submit">Search</button>
                </form>

            </div>
        </div>
        <!-- /row-fluid-->

        <div class="row-fluid">

            <div class="span12">
                <div class="head">
                    <div class="isw-grid"></div>
                    <h1>Categories Management</h1>

                    <div class="clear"></div>
                </div>
                <div class="block-fluid table-sorting">
                    <a href="<%= new_category_path %>" class="btn btn-add">Add Category</a>

                    <% if !is_empty?(Category) %>

                        <%= form_tag bulk_action_categories_path do %>

                            <%= hidden_field_tag :current_page, @current_page %>

                            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable_2">
                                <thead>
                                <tr>
                                    <th><%= check_box_tag "check_all", true %></th>
                                    <th width="15%" class="sorting"><%= sortable "id", "ID", @current_page %></th>
                                    <th width="35%" class="sorting"><%= sortable "name", "Category Name", @current_page %></th>
                                    <th width="20%" class="sorting"><%= sortable "activated", "Activate", @current_page %></th>
                                    <th width="10%" class="sorting"><%= sortable "created_at", "Time Created", @current_page %></th>
                                    <th width="10%" class="sorting"><%= sortable "updated_at", "Time Updated", @current_page %></th>
                                    <th width="10%">Action</th>
                                </tr>
                                </thead>
                                <tbody>
        
                                <%= render @categories %>
                                
                                </tbody>
                            </table>


                            <div class="bulk-action">
                                <%= submit_tag "Activate", class: "btn btn-success" %>
                                <%= submit_tag "Delete", class: "btn btn-danger" %>
                            </div><!-- /bulk-action-->

                        <% end %>


                    <!-- <div class="dataTables_paginate">
                        <a class="first paginate_button paginate_button_disabled" href="#">First</a>
                        <a class="previous paginate_button paginate_button_disabled" href="#">Previous</a>
                        <span>
                            <a class="paginate_active" href="#">1</a>
                            <a class="paginate_button" href="#">2</a>
                        </span>
                        <a class="next paginate_button" href="#">Next</a>
                        <a class="last paginate_button" href="#">Last</a>
                    </div> -->
                        <% if @total_pages != 1 %>
                            <%= render 'layouts/pagination', object: @categories %>
                        <% end %>
                    <% end %>
                    

                    <div class="clear"></div>
                </div>
            </div>

        </div>
        <div class="dr"><span></span></div>

    </div>

</div>