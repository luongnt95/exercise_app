<div class="content">


    <div class="breadLine">

        <ul class="breadcrumb">
            <li><a href="list-categories.html">List Categories</a> <span class="divider">></span></li>
            <li class="active">Edit</li>
        </ul>

    </div>

    <div class="workplace">

        <div class="row-fluid">

            <div class="span12">
                <div class="head">
                    <div class="isw-grid"></div>
                    <h1>Categories Management</h1>

                    <div class="clear"></div>
                </div>
                <div class="block-fluid">

                    <%= form_for @category do |f| %>

                    	<div class="row-form">
                            <div class="span3">Category Name:</div>
                            <div class="span9">
                                <%= f.text_field :name, placeholder: "some text value..." %>
                            </div>
                            <div class="clear"></div>
                        </div> 
                        <div class="row-form">
                            <div class="span3">Activate:</div>
                            <div class="span9">
                                <%= f.select(:activated, [['choose an option...', 'null'], 
                                                          ['Activate', 'Activated'], 
                                                          ['Deactivate', 'Deactivated']]) %>
                            </div>
                            <div class="clear"></div>
                        </div>                          
                        <div class="row-form">
                            <%= f.submit "Update", class: "btn btn-success" %>
							<div class="clear"></div>
                        </div>

                    <% end %>

                    <div class="clear"></div>
                </div>
            </div>

        </div>
        <div class="dr"><span></span></div>

    </div>

</div>
